<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/color_black"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:textSize="20sp"
              android:layout_marginTop="10dp"
              android:textColor="@color/whit"
              android:text="游戏大全"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:layout_marginTop="40dp"
            android:paddingRight="25dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/pour"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/welfare"/>

        <Space android:layout_width="30dp"
               android:layout_height="1dp"/>

        <ImageView android:layout_width="0dp"
                   android:layout_weight="1.2"
                   android:layout_height="match_parent"
                   android:adjustViewBounds="true"
                   android:src="@drawable/icon_3d"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:layout_marginTop="20dp"
            android:paddingRight="25dp"
            android:orientation="horizontal">

        <ImageView android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="wrap_content"
                   android:adjustViewBounds="true"
                   android:src="@drawable/leisure"/>

        <Space android:layout_width="30dp"
               android:layout_height="1dp"/>

        <ImageView android:layout_width="0dp"
                   android:layout_weight="1.2"
                   android:layout_height="wrap_content"
                   android:adjustViewBounds="true"
                   android:src="@drawable/leisure1"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


        <ImageView android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:adjustViewBounds="true"
                   android:src="@drawable/bullfighting"/>

        <Space android:layout_width="30dp"
               android:layout_height="1dp"/>

        <ImageView android:layout_width="0dp"
                   android:layout_weight="1.2"
                   android:layout_height="wrap_content"
                   android:adjustViewBounds="true"
                   android:src="@drawable/bullfighting2"/>


    </LinearLayout>


</LinearLayout>