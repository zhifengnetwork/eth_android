<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:background="@drawable/shape_voting"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="10dp"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textColor="#232822"
                  android:text="当前投资额度:"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textColor="#232822"
                  android:text="0.00"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:background="@drawable/shape_voting"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="10dp"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:orientation="horizontal">

        <TextView
                android:id="@+id/accountType"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#232822"
                android:text="账户类型:"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textColor="#232822"
                  android:text="0.00"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:background="@drawable/shape_voting"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="10dp"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textColor="#232822"
                  android:text="复投金额:"/>

        <EditText android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/shape_voting_input"
                  android:paddingLeft="10dp"
                  android:paddingTop="2dp"
                  android:textColor="#f00606"
                  android:paddingBottom="2dp"
                  android:textSize="12sp"
                  android:text="0.00"/>

    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="44dp"
              android:text="确定"
              android:textColor="@color/whit"
              android:gravity="center"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="40dp"
              android:background="@drawable/shape_round_green"/>

</LinearLayout>