<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#3C415F"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<include layout="@layout/layout_toolbar"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:background="@drawable/shape_c2c_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#949bc3"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="订 单 号:"/>
            <TextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/whit"
                    android:text="183"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#949bc3"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="挂 卖 人:"/>
            <TextView
                    android:id="@+id/order_openid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/whit"
                    android:text="1235488465"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:background="@drawable/shape_c2c_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#949bc3"
                    android:textSize="15sp"
                    android:text="挂卖单价:"/>
            <TextView
                    android:id="@+id/order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textSize="15sp"
                    android:textColor="@color/whit"
                    android:text="4.00"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#949bc3"
                    android:textSize="15sp"
                    android:text="挂卖数量:"/>
            <TextView
                    android:id="@+id/order_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textSize="15sp"
                    android:textColor="@color/whit"
                    android:text="2"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whit"
                android:textStyle="bold"
                android:text="待 付 款："/>
        <TextView
                android:id="@+id/order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/whit"
                android:textStyle="bold"
                android:text="8.00"/>
    </LinearLayout>



    <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="180dp"
            android:layout_height="37dp"
            android:layout_marginTop="37dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_c2c_eth_btn"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/whit"
            android:text="未交易是否取消"/>

</LinearLayout>