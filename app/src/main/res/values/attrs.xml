<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GridRadioGroup">
        <attr name="numColumns" format="integer" />
        <attr name="horizontalSpacing" format="dimension" />
        <attr name="verticalSpacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <!--标题文字-->
        <attr name="ct_title_name" format="string" />
        <!--标题文字颜色-->
        <attr name="ct_title_color" format="color" />
        <!--标题文字大小-->
        <attr name="ct_title_size" format="dimension" />
        <!--标题文字背景色-->
        <attr name="ct_title_bd_color" format="color" />

    </declare-styleable>

    <declare-styleable name="StarRatingView">
        <attr name="stat_on" format="reference" />
        <attr name="stat_off" format="reference" />
        <attr name="stat_half" format="reference" />
        <attr name="ratable" format="boolean" />
        <attr name="star_padding" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CustomerMarqueeView">
        <!--每条item切换的时间间隔-->
        <attr name="switch_item_duration" format="integer" />
        <!--滚动完成 切换到下一条前的时间间隔-->
        <attr name="next_pause_duration" format="integer" />
        <!--内容文字颜色-->
        <attr name="content_text_color" format="color|reference" />
        <!--内容文字大小-->
        <attr name="content_text_size" format="dimension|reference" />
    </declare-styleable>

</resources>